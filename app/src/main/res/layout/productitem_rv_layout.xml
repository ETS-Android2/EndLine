<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/style_bottom_border"
    android:padding="13dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_rv_product_img"
        android:src="@drawable/logo_v1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rv_product_name"
            android:textSize="17dp"
            android:text="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_rv_product_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="buy date / end date"/>

        <TextView
            android:id="@+id/tv_rv_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:textAlignment="viewEnd"
            android:text="category"/>

    </LinearLayout>
</LinearLayout>